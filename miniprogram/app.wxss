.form-area > .form-button-group {
	display: flex;
	flex-direction: row;
}

.form-area > .form-button-group > .form-button {
	display: flex;
	flex-direction: row;
	justify-content: center;
	font-weight: 400;
	background-color: #841FFD77;
	border-radius: 0;
	padding: 1rem .5rem;
	flex-grow: 2;
}

.form-area > .form-button-group > .form-button:first-child {
	border-radius: .5rem 0 0 .5rem;
}

.form-area > .form-button-group > .form-button:last-child {
	border-radius: 0 .5rem .5rem 0;
	border-left: 0;
}

.form-area > .form-button {
	display: flex;
	flex-direction: row;
	justify-content: center;
	padding: 1rem .5rem;
	background-color: #841FFD77;
	border-radius: .5rem;
	width: 100%;
}

.form-area .form-field .form-field-body > .form-button {
	display: flex;
	flex-direction: row;
	justify-content: center;
	padding: 1rem .5rem;
	background-color: #841FFDBB;
	border-radius: .5rem;
	width: 100%;
	color: white;
}
