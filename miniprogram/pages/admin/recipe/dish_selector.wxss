.company-area {
	display: flex;
	flex-direction: column;
	width: 100%;
}

.title-area {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	padding: .5rem;
	overflow: hidden;
}

.title-area .title-name {
	font-size: 1.5rem;
	font-weight: bolder;
	justify-content: space-between;
	align-items: center;
}

.title-area .title-btn {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	margin: 0;
	background-color: #841FFD;
	color: white;
	width: 7rem;
}

.title-area .title-btn image {
	height: 1rem;
	width: 1rem;
}

.company-area .company-item {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	background-color: #841FFD77;
	padding: 1.5rem .5rem;
	margin: .5rem 0;
	border-radius: .5rem;
	flex-grow: 2;
}

.company-area .company-item .item-detail {
	display: flex;
	flex-direction: row;
	align-items: center;
}

.company-area .company-item .item-detail .company-index {
	display: flex;
	flex-direction: row;

	justify-content: center;
	align-items: center;
	background-color: white;
	color: #841FFDCC;
	height: 1.5rem;
	width: 1.5rem;
	border-radius: 50%;
	margin-right: 1rem;
}


.company-area .company-item image {
	height: 2rem;
	width: 2rem;
}

.company-area .company-item .company-name {
	color: #2e2e2e;
	overflow: hidden;
	margin-right: 1rem;
}
