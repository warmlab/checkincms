.operation-area {
	display: flex;
	flex-direction: column;
	width: 100%;
}

.operation-area .search-area {
	display: flex;
	flex-direction: row;
	align-items: center;
}

.operation-area .search-area input {
	border: solid #841FFD33;
	border-radius: .5rem;
	background-color: white;
	flex-grow: 2;
	margin-left: .5rem;
	padding: .5rem .2rem;
}

.operation-area .company-area {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	width: 100%;
}

.operation-area .company-area .company-item {
	margin-right: 1rem;
}

.period-group {
	display: flex;
	flex-direction: row;
	padding: .5rem 0;
}

.period-group .period-item {
	display: flex;
	flex-direction: row;
	margin-right: 1rem;
}

.date-picker-area {
	display: flex;
	flex-direction: row;
	align-items: center;
	margin-bottom: 0.5rem;
	justify-content: space-between;
}

.date-picker-area picker {
	flex-grow: 2;
	border: solid .1rem #afb0b2;
	border-radius: .5rem;
	padding: .5rem;
	background-color: white;
}

.date-picker-area .interval {
	margin: 0 .5rem;
}

.summary-area {
	display: flex;
	flex-direction: column;
	margin-top: .5rem;
}

.summary-area .summary-item {
	display: flex;
	padding: 1rem .5rem;
	margin-top:.5rem;
	border-radius: .5rem;
	background-color: #841FFD33;
}

.summary-area .summary-item text:last-child {
	margin-left: .5rem;
	font-weight: bold;
}

.record-area {
	display: flex;
	flex-direction: column;
	white-space: nowrap;
	margin: .5rem;
	overflow: hidden;
}


.record-area .record-item {
	display: flex;
	flex-direction: column;
	margin-bottom: .5rem;
}

.record-area .record-item .personal-info {
	display: flex;
	flex-direction: row;
	margin-bottom: .2rem;
}

.record-area .record-item .personal-info .name {
	margin-right: .5rem;
	font-weight: bold;
}

.record-area .record-item .checkin-info {
	display: flex;
	flex-direction: column;
}

.record-area .record-item .checkin-info .status {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin: 0 .2rem .2rem 0;
	padding: .5rem;
	border-radius: .5rem;
}

.record-area .record-item .checkin-info .status.reserved {
	background-color: #00cd2d1a;
}

.record-area .record-item .checkin-info .status.notreserved {
	background-color: #35383E1A;
}

.record-area .record-item .checkin-info .status .status-info {
	display: flex;
	align-items: center;
	margin: 0 .2rem .2rem 0;
	flex-grow: 2
}

.record-area .record-item .checkin-info .status .status-info:last-child {
	justify-content: flex-end;
}


.record-area .record-item .checkin-info .status .status-info image {
	width: 2rem;
	height: 2rem;
	margin-left: .2rem;
}

.record-area .record-item.header {
	background-color:#841ffd33;
}

.record-area .record-item .td {
	display: inline-block;
	width: 4rem;
	overflow: hidden;
}

.record-area .record-item.checkedin {
	background-color: #00cd2d1a;
	/*background: linear-gradient(0deg, rgba(0, 205, 45, 0.1), rgba(0, 205, 45, 0.1)), #FFFFFF; */
	color: #176b2a;
}

.record-area .record-item.notcheckedin {
	background-color: #35383E1A;
	color: #35383E;
}

.record-area .record-item.tocheckin {
	background-color: #FFAA041A;
	color: #805d19;
}

.record-area .record-item.notcheckedin .btn-backdate {
	/*background-color: #ffb931;*/
	color: white;
	padding: .5rem 0;
}
