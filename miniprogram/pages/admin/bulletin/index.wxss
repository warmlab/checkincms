.company-area {
	display: flex;
	flex-direction: column;
}

.title-area {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	padding: .5rem;
	overflow: hidden;
}

.title-area .title-name {
	font-size: 1.5rem;
	font-weight: bolder;
	justify-content: space-between;
	align-items: center;
}

.title-area .title-btn {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	margin: 0;
	background-color: #841FFD;
	color: white;
	width: 7rem;
}

.title-area .title-btn image {
	height: 1rem;
	width: 1rem;
}

.company-area .company-item {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	background-color: #841FFD;
	padding: 1.5rem .5rem;
	margin: .5rem;
	border-radius: .5rem;
}

.company-area .company-item image {
	height: 2rem;
	width: 2rem;
}

.company-area .company-item .company-name {
	color: white;
	overflow: hidden;
}